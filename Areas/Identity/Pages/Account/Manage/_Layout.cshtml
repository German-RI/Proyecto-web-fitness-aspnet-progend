@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<div class="Fondo-main">
    <div class="centrar-vista text-dark">
        <div class="colo-titulo-login-register">
            <h1>Tu cuenta</h1>
        </div>
    </div>
    <br>
    <div class="form-container text-dark">
        <h2>Cambia la configuración de tu cuenta</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
