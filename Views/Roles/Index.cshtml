@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<form method="get">
    <input type="text" name="searchTerm" placeholder="Buscar por correo" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-secondary">Gestionar Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>