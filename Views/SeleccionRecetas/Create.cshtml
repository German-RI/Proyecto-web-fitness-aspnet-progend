@model ProyectoPROGEND.Models.Recetas;
@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create">
    <div class="form-floating mb-3">
        <input asp-for="Nombre" placeholder="" class="form-control" required>
        <label for="floatingInput">Nombre De la Receta</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Ingredientes"
            style="height: 100px"></textarea>
        <label for="floatingTextarea2">Lista De ingredientes</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Calorias"
            style="height: 100px"></textarea>
        <label for="floatingTextarea2">Calorias de el producto</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Proteinas"
            style="height: 100px"></textarea>
        <label for="floatingTextarea2">Proteinas</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Carbohidratos"
            style="height: 100px"></textarea>
        <label for="floatingTextarea2">Carbohidratos</label>
    </div>
    <div class="form-floating">

        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Instrucciones"
            style="height: 100px"></textarea>
        <label for="floatingTextarea2">Instrucciones Para elaborar Receta</label>
    </div>

    <br>
    <button type="submit" value="Create" class="btn btn-primary">Guardar</button>

</form>

<div>
    <a class="btn btn-primary" asp-action="Index">Inicio</a>
</div>