@model ProyectoPROGEND.Models.Recetas;
@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-floating mb-3">
        <input asp-for="Nombre" placeholder="Nombre de marca" class="form-control" required>
        <label for="floatingInput">Nombre de la receta </label>
    </div>
    <br>
    <div class="form-floating mb-3">
        <label>Imagen de la receta</label>
        <img src="~/imagenes/@Model.Image_Portada" class="receta-imagen" alt="img_portada">
        <input type="hidden" name="Image_Portada" value="@Model.Image_Portada" />
        <br>
        <input type="file" name="imagen" class="form-control"/>
        <label for="floatingInput">Subir Imagen</label>
    </div><br>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Leave a comment here"  asp-for="Ingredientes"
            style="height: 100px"></textarea>
        <label for="floatingInput">ingredientes </label>
    </div>
    <br>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Leave a comment here"  asp-for="Instrucciones"
            style="height: 100px"></textarea>
        <label for="floatingInput">instruciones</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Calorias" placeholder="Nombre de marca" class="form-control"  required>
        <label for="floatingTextarea2">Calorias</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Proteinas" placeholder="Nombre de marca" class="form-control"  required>
        <label for="floatingTextarea2">Proteinas</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Carbohidratos" placeholder="Nombre de marca" class="form-control"  required>
        <label for="floatingTextarea2">Carbohidratos</label>
    </div>
    <br>
    <button type="submit" value="Save" class="btn btn-primary">Guardar</button>

</form>
<br>
<div>
    <a class="btn btn-primary" asp-action="Index">Inicio</a>
</div>