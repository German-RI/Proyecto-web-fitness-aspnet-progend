@model ProyectoPROGEND.Models.Recetas;
@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Edit">
    <div class="form-floating mb-3">
        <input asp-for="Nombre" placeholder="Nombre de marca" class="form-control" value="@Model.Nombre" required>
        <label for="floatingInput">Nombre de la receta </label>
    </div>
    <br>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Leave a comment here" value="@Model.Ingredientes" asp-for="Ingredientes"
            style="height: 100px"></textarea>
        <label for="floatingInput">ingredientes </label>
    </div>
    <br>
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Leave a comment here" value="@Model.Instrucciones" asp-for="Instrucciones"
            style="height: 100px"></textarea>
        <label for="floatingInput">instruciones</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Calorias" placeholder="Nombre de marca" class="form-control" value="@Model.Calorias" required>
        <label for="floatingTextarea2">Calorias</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Proteinas" placeholder="Nombre de marca" class="form-control" value="@Model.Proteinas" required>
        <label for="floatingTextarea2">Proteinas</label>
    </div>
    <br>
    <div class="form-floating">
        <input asp-for="Carbohidratos" placeholder="Nombre de marca" class="form-control" value="@Model.Carbohidratos" required>
        <label for="floatingTextarea2">Carbohidratos</label>
    </div>
    <br>
    <button type="submit" value="Save" class="btn btn-primary">Guardar</button>

</form>
<br>
<div>
    <a class="btn btn-primary" asp-action="Index">Inicio</a>
</div>