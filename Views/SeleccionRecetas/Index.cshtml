@model List<ProyectoPROGEND.Models.Recetas>
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <h1 class="mb-4">Recetas</h1>

    <div>
        <a class="btn btn-primary" asp-action="Create">AÃ±adir Recetas</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var plan in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@plan.Nombre</h5>
                        <p class="card-text">
                            <span class="badge bg-primary">Cal: @plan.Calorias</span>
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@plan.Ingredientes</li>
                        </ul>
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-outline-primary">View Details</a>
                            <a href="/TrainingPlan/Select/@plan.Id" class="btn btn-success">Select Receta</a>
                            <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>