@model ProyectoPROGEND.Models.PlanEntranamiento;
@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5 fondo-planesentrena">
    <h2 class="mb-4 colo-titulo">Crear un Plan de entrenamiento</h2>
    <div class="form-container">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input asp-for="Nombre" placeholder="" class="form-control" required>
                <label for="floatingInput">Nombre De Plan entrenamiento</label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="file" name="imagen" class="form-control" required />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="TipoEntrenamiento" placeholder="" class="form-control" required>
                <label for="floatingInput">Tipo de Entrenamiento (cardio, fuerza, HIIT, yoga, etc)</label>
                <span asp-validation-for="TipoEntrenamiento" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Equipamiento" placeholder="" class="form-control" required>
                <label for="floatingInput">Equipamiento necesario</label>
                <span asp-validation-for="Equipamiento" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Frecuencia" placeholder="" class="form-control" required>
                <label for="floatingInput">Frecuencia de entrenamiento (diaria, semanal, etc)</label>
                <span asp-validation-for="Frecuencia" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Objetivo" placeholder="" class="form-control" required>
                <label for="floatingInput">Objetivo del Plan (p√©rdida de peso, ganancia muscular, etc)</label>
                <span asp-validation-for="Objetivo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Duracion" placeholder="" class="form-control" required>
                <label for="floatingInput">Duracion del Plan</label>
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Dificultad" placeholder="" class="form-control" required>
                <label for="floatingInput">Rango de dificultad de 1 a 5</label>
                <span asp-validation-for="Dificultad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Nivel" placeholder="" class="form-control" required>
                <label for="floatingInput">Nivel de entrenamiento de 1 a 5</label>
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" asp-for="Descripcion" id="descripcionTextarea"
                    style="height: 100px"></textarea>
                <label for="floatingTextarea2">Descripcion</label>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EdadMinRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Edad Minima recomendada</label>
                <span asp-validation-for="EdadMinRecom" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EdadMaxRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Edad MAxima Recomendada</label>
                <span asp-validation-for="EdadMaxRecom" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PesoMinRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Peso Minimo Recomendado</label>
                <span asp-validation-for="PesoMinRecom" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PesoMaxRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Peso Maximo Recomendado</label>
                <span asp-validation-for="PesoMaxRecom" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="AlturaMinRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Altura Minima Recomendada</label>
                <span asp-validation-for="AlturaMinRecom" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="AlturaMaxRecom" placeholder="" class="form-control" required>
                <label for="floatingTextarea2">Altura Maxima Recomendada</label>
                <span asp-validation-for="AlturaMaxRecom" class="text-danger"></span>
            </div>
            <button type="submit" value="Create" class="btn btn-primary">Guardar</button>

        </form>
    </div>

    <br>
    <div><br>
        <a class="btn btn-primary" asp-action="Index">Inicio</a>
    </div>
</div>
